<div class="form-group row">
  <label for="{{property}}" class="control-label col-md-4 text-right">{{label}}</label>
  <div class="col-md-8">
    {{#power-select
      name=property
      required=required
      options=optionEntries
      placeholder=label
      selected=(mut (get model property))
      searchField=contentLabel
      onchange=(action (mut (get model property)))
      as |option|
    }}
      {{get option contentLabel}}
    {{/power-select}}
  </div>
</div>
