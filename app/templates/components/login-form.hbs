<div class="container login">

  <div class="background"></div>

  <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 card">

    <img class="img-responsive logo" src="/assets/images/encendeloquesos.png" />

    <form {{action 'authenticate' on='submit'}} class="form-horizontal">

      <div class="form-group">
        {{#if error}}
          <div class="alert alert-danger" role="alert">
            {{#each-in error as |key value|}}
              <strong>{{key}}</strong> {{value}}<br>
            {{/each-in}}
          </div>
        {{/if}}
      </div>

      <div class="form-group">
        <label for="identification" class="control-label col-md-4">{{t "language"}}</label>
        <div class="col-md-8">
          <ul class="list-unstyled">
              {{language-select}}
          </ul>
        </div>
      </div>

      <div class="form-group">
        <label for="identification" class="control-label col-md-4">{{t "user.username"}}</label>
        <div class="col-md-8">
          {{input id='username' placeholder=(t "user.username") class='form-control' required='required' value=username}}
        </div>
      </div>

      <div class="form-group">
        <label for="password" class="control-label col-md-4">{{t "user.password"}}</label>
        <div class="col-md-8">
          {{input class='form-control' required='required' id='password' placeholder=(t "user.password") type='password' value=password}}
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-8 col-md-offset-4">
          <button type="submit" class="btn btn-success btn-lg btn-block">{{t "button.login"}}</button>
        </div>
      </div>

    </form>
  </div>
</div>
